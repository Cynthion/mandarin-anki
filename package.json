{
  "name": "mandarin-anki-deck",
  "private": true,
  "devDependencies": {
    "serve": "14.2.5",
    "prettier": "3.3.3"
  },
  "scripts": {
    "preview": "serve -l 5173",
    "sprite:prompt": "node scripts/make_sprite_prompt.mjs media/sprites/image-data.tsv > media/sprites/sprite-prompt.txt",
    "sprite:slice": "python scripts/slice_sprite.py --sprite media/sprites/food.png --tsv media/sprites/image-data.tsv --out media/images --overwrite --debug_detect media/sprites/output.detect.debug.png --debug_list",
    "sprite:apply-images": "node scripts/apply_images_to_notes.mjs --notes deck/notes.tsv --imageData media/sprites/image-data.tsv --imagesDir media/images",
    "anki:sync-media:mac": "python3 scripts/sync_media_to_anki.py --anki-media \"$HOME/Library/Application Support/Anki2/User 1/collection.media\"",
    "anki:sync-media:windows": "python scripts\\sync_media_to_anki.py --anki-media \"%APPDATA%\\Anki2\\User 1\\collection.media\""
  }
}
